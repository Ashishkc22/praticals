@model TechSkillsViewModel

<div class="container my-5">
    <h2 class="text-center fw-bold mb-4">💻 Technical Skills</h2>

    <div class="row">
        @foreach (var category in Model.Skills)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-dark text-white fw-semibold">
                        <i class="bi bi-tools me-2"></i> @category.Key
                    </div>
                    <div class="card-body">
                        @foreach (var skill in category.Value)
                        {
                            <span class="badge bg-primary m-1 p-2 fs-6">@skill</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
